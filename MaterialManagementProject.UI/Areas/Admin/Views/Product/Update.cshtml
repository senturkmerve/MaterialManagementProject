
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}
@model MaterialManagementProject.UI.Areas.Admin.Models.VM.ProductVM
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Product/Add">Add Product</a></li>
        <li><a href="/Admin/Product/List">Product List</a></li>
        <li class="active">Product List</li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Products</h3>
                </div>
                <form action="/Admin/Product/Update" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">ProductName</label>
                            <input type="text" name="ProductName" value="@Model.Product.ProductName" class="form-control" placeholder="ProductName">
                        </div>
                        <div class="form-group">
                            <label for="text">Quantity</label>
                            <input type="text" name="Quantity" value="@Model.Product.Quantity" class="form-control" placeholder="Quantity">
                        </div>
                        <div class="form-group">
                            <label for="text">Kdv</label>
                            <input type="text" name="Kdv" value="@Model.Product.Price" class="form-control" placeholder="Kdv">
                        </div>
                        <div class="form-group">
                            <label for="text">First Price</label>
                            <input type="text" name="FirstPrice" value="@Model.Product.ProductCode" class="form-control" placeholder="FirstPrice">
                        </div>
                        <div class="form-group">
                            <label for="text">Sale Price</label>
                            <input type="text" name="SalePrice" value="@Model.Product.UnitInStock" class="form-control" placeholder="SalePrice">
                        </div>
                        
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input type="file" name="Image" value="@Model.Product.ImagePath" class="form-control" />
                        </div>
                        <input type="text" style="visibility:hidden" name="ID" value="@Model.Product.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

