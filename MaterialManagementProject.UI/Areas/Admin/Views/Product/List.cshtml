
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}
@model List<MaterialManagementProject.Model.Option.Product>
<script src="~/Content/script/dataTables.bootstrap.min.js"></script>
<script src="~/Content/script/jquery.dataTables.min.js"></script>
<link href="~/Content/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Product/Add">Add Product</a></li>
        <li class="active">Product List</li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of Products</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Price</th>
                                <th>ProductName</th>
                                <th>ProductCode</th>
                                <th>UnitInStock</th>
                                <th>ImagePath</th>
                                <th>Quantity</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Price</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductCode</td>
                                    <td>@item.UnitInStock</td>
                                    <td>@item.ImagePath</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Category.Name</td>

                                    <td>
                                        <img src="@item.ImagePath" style="display:block" width="75" height="75" />
                                    </td>
                                    <td><a href="/Admin/Product/Update/@item.ID" type="button" class="btn btn-block btn-warning">Update</a></td>
                                    <td><a href="/Admin/Product/Delete/@item.ID" type="button" class="btn btn-block btn-danger">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script>$(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })</script>



